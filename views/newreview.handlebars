<h1>{{community.name}}</h1>

<div class="col-md-6">
    <h3>Publish a New Review:</h3>

    <form class="form new-review-form">
        <div class="form-group">
            <label for="review-name">Review Title:</label>
            <br>
            <input class="form-input" type="text" id="review-name" name="review-name" />
        </div>
        <div class="form-group">
            <textarea class="form-input" id="post-body" name="post-body" rows="10" cols="40"></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Publish Review</button>
        </div>
    </form>
</div>

<script src="/js/new-review.js"></script>