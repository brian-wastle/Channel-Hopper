<div class="welcome">
  <h2>Welcome, {{user.name}}!</h2>
  <img src="{{user.avatarPath}}" alt="" width="100" height="100">
</div>
<div class="profile">

  <div class="my-communities"> 
    <h3 class="is-size-4 is-underlined profile-heading">My Communities:</h3>
    {{#if communities.length}}
    {{#each communities as |communities|}}
    <div>
      <a href="/community/{{communities.id}}">{{communities.name}}</a>
    </div>
    {{/each}}
    {{else}}
    <a href="/search"><h3>+ Search for a Show</h3></a>
    {{/if}}
  </div>

  <div class="my-communities">
    <h3 class="is-size-4 is-underlined profile-heading">My Conversations:</h3>
    {{#if threads.length}}
    {{#each threads as |thread|}}
    <div class="row mb-2">
      <a href="/threads/{{thread.id}}">{{thread.subject}}</a>
    </div>
    {{/each}}
    {{/if}}
  </div>

  <div class="my-communities">
    <h3 class="is-size-4 is-underlined profile-heading">My Reviews:</h3>
    {{#if reviews.length}}
    {{#each reviews as |review|}}
    <div class="row mb-2">
      <a href="/reviews/{{review.id}}">{{review.subject}}</a>
    </div>
    {{/each}}
    {{/if}}
  </div>
</div>