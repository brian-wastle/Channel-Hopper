<div class="row">
  <div class="col-auto">
  </div>
</div>

<div class="row mt-4">
  
  {{#if communities.length}}
    <div class="col-md-6 blog-list">
      <h3>My Communities:</h3>

      {{#each communities as |communities|}}
      <div class="row mb-2">
        {{communities.name}}
      </div>
      {{/each}}
    </div>
    {{/if}}



  {{#if threads.length}}
  <div class="col-md-6 blog-list">
    <h3>My Conversations:</h3>

    {{#each threads as |thread|}}
    <div class="row mb-2">
      {{thread.subject}}
    </div>
    {{/each}}
  </div>
  {{/if}}


  {{#if reviews.length}}
  <div class="col-md-6 blog-list">
    <h3>My Reviews:</h3>

    {{#each reviews as |review|}}
    <div class="row mb-2">
      {{review.subject}}
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
