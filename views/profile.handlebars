<div class="row">
  <div class="col-auto">
  </div>
</div>

<div class="row mt-4">
  

  {{#if threads.length}}
  <div class="col-md-6 blog-list">
    <h3>My Conversations:</h3>

    {{#each threads as |thread|}}
    <div class="row mb-2">
      <div class="col-md-8">
        {{!-- todo: link each thread to the associated community page --}}
        {{thread.subject}} 
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}

  {{#if reviews.length}}
  <div class="col-md-6 blog-list">
    <h3>My Reviews:</h3>

    {{#each reviews as |review|}}
    <div class="row mb-2">
      <div class="col-md-8">
        {{!-- todo: link each review to the associated community page --}}
        {{review.subject}} 
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
