
<section class="login-button">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-centered">
        <div class="column is-5-tablet is-4-desktop is-3-widescreen">
          <form action="" class="box form login-form">
            <div class="field form-group">
              <label for="email-login" class="label">Email</label>
              <div class="control has-icons-left">
                <input type="email" placeholder="e.g. bobsmith@gmail.com" class="input form-input" id="email-login" required>
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
            </div>
            <div class="field form-group">
              <label for="password-login" class="label">Password</label>
              <div class="control has-icons-left">
                <input type="password" placeholder="*******" class="input" id="password-login" required>
                <span class="icon is-small is-left">
                  <i class="fa fa-lock"></i>
                </span>
              </div>
            </div>
              <button class="button is-black" type="submit">
                Login
              </button>
              <br>
              <br>
           <p>New user? <a href="/signup">Sign up!</a></p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>




<script src="./js/login-form.js"></script>













