
<link rel="stylesheet" href="/css/style.css">

<div class="thread-container">
    <a href="/community/{{community.id}}/"><h1>{{community.name}}</h1></a>
    <h3 class = "mt-10 pb-4 is-size-5">{{subject}}</h3>
    <br>
    <img src="{{author.avatarPath}}" alt="user avatar" width="30" height="30">
    <span>{{author.name}} on {{format_date date_created}}</span>
    



        <div>
            <h3 class="pt-4 pb-4">Replies:</h3>

            {{#each posts as |post|}}
            <div class="pb-4 is-italic">
            {{body}}
            <br>
            </div>
            {{/each}}
        </div>

    <div>
        <form class="form new-comment-form field">
            <div class="form-group pt-4">
                <label for="post-body label">Add a comment:</label>
                <br>
                <div class="control">
                <textarea class="form-input textarea" id="post-body" name="post-body" rows="5" cols="10"></textarea>
                </div>
            </div>
            <div class="form-group control pt-4">
                <button type="submit" class="button is-link is-dark">Add Comment</button>
            </div>
        </form>
    </div>



