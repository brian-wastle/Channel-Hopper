<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Group Project 2</title>
  <link rel="stylesheet" href="css/styles.css">
</head>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>

<body class="bg-vanilla font-serif"><!-- component -->
  <header>
    <nav
      class="flex items-center justify-between flex-wrap bg-alloy-orange py-4 lg:px-12 shadow border-solid border-t-2">
      <div
        class="flex justify-between lg:w-auto w-full lg:border-b-0 pl-6 pr-2 border-solid border-b-2 border-gray-300 pb-5 lg:pb-0">
        <div class="flex items-center flex-shrink-0 mr-16">
          <span class="font-semibold text-xl tracking-tight">Communivision</span>
        </div>
      </div>

      <div class="menu w-full flex-grow lg:flex lg:items-center lg:w-auto lg:px-3 px-8">
        <div class="text-md font-bold lg:flex-grow">
          <a href="#responsive-header"
            class="block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded  mr-2" id="homepage">
            Home
          </a>
          <a href="#responsive-header"
            class=" block mt-4 lg:inline-block lg:mt-0 hover:text-white px-4 py-2 rounded mr-2" id="dashboard">
            My Profile
          </a>
        </div>
        <!-- This is an example component -->
        <div class="relative mx-auto text-gray-600 lg:block hidden">
          <input class="border-2 border-gray-300 bg-white h-10 pl-2 pr-8 rounded-lg text-sm focus:outline-none"
            type="search" name="search" placeholder="Search for a show community">
          <button type="submit" class="absolute right-0 top-0 mt-3 mr-2">
            <svg class="text-gray-600 h-4 w-4 fill-current" xmlns="http://www.w3.org/2000/svg" version="1.1" id="Capa_1"
              x="0px" y="0px" viewBox="0 0 56.966 56.966" style="enable-background:new 0 0 56.966 56.966;"
              xml:space="preserve" width="512px" height="512px">
              <path
                d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23  s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92  c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17  s-17-7.626-17-17S14.61,6,23.984,6z" />
            </svg>
          </button>
        </div>
        <div class="flex ">
          <a href="#" class="block text-md px-4 py-2 rounded ml-2 font-bold hover:text-white mt-4 lg:mt-0">Sign
            Up</a>

          <a href="#" class=" block text-md px-4  ml-2 py-2 rounded font-bold hover:text-white mt-4 lg:mt-0"
            id="login">Login</a>
        </div>
      </div>

    </nav>
  </header>
  <div>

    <h1>
      <a href="/">Group Project 2</a>
    </h1>
    <nav>
      <button id="gotoSearch">Go to Search</button>
      <!-- Conditionally render login or logout links -->
      <button class="no-button" id="homepage">home</button>
      {{#if logged_in}}
      <button class="no-button" id="dashboard">profile</button>
      <button class="no-button" id="logout">logout</button>
      {{else}}
      <button class="no-button" id="login">login</button>
      {{/if}}

    </nav>
   
    <main>
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
  
</body>
</div>


<script src="/js/main.js"></script>
<!-- Render script for logged in users only -->
{{#if logged_in}}
<script src="/js/logout.js"></script>
{{else}}
<script src="/js/login.js"></script>
{{/if}}

</body>

</html>