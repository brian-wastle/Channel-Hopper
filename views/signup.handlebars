                        <input class="input" id="email-signup" type="text" placeholder="Email address">
                    </div>
                    <div class="column">
                        <label for="Name">Password</label>
                        <input class="input" id="password-signup" type="password" placeholder="Password">
                    </div>
                    <div class="column">
                        <div class="form-group"></div>
                        <label for="avatar-signup">Choose an avatar:</label>
                        <div class="avatar-group" id="avatar-group">
                            <input type="hidden" id="avatar-path" name="avatarPath">
